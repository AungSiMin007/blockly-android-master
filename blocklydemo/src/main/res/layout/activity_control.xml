<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/control_bg"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">


    <ImageView
        android:id="@+id/to_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/follow"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/select_xuji_bg"
                        android:gravity="center"
                        android:text="循迹"
                        android:textColor="@drawable/select_xuji_color" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/control"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/select_control_bg"
                        android:gravity="center"
                        android:text="遥控"
                        android:textColor="@drawable/select_control_color" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hide"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/select_hide_bg"
                        android:gravity="center"
                        android:text="避障"
                        android:textColor="@drawable/select_hide_color" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/prevent_down"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/select_prevent_bg"
                        android:gravity="center"
                        android:text="防跌落"
                        android:textColor="@drawable/select_prevent_color" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/start_and_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/select_start_pause_yellow" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                 />

            <TextView
                android:visibility="gone"
                android:id="@+id/introduce"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:text="避障"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layout_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/go"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="前" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/left"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="左" />

                    <Button
                        android:id="@+id/stop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="停" />

                    <Button
                        android:id="@+id/right"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="右" />
                </LinearLayout>

                <Button
                    android:id="@+id/back"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="后" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>